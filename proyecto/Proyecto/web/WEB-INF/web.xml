<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Registrar</servlet-name>
        <servlet-class>Control.Registrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Control.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Comentario</servlet-name>
        <servlet-class>Control.Comentario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sesion</servlet-name>
        <servlet-class>Control.Sesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServicioObtenerChat</servlet-name>
        <servlet-class>Control.ServicioObtenerChat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServicioUsuariosConectados</servlet-name>
        <servlet-class>Control.ServicioUsuariosConectados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServicioUsuarioDes</servlet-name>
        <servlet-class>Control.ServicioUsuarioDes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registrar</servlet-name>
        <url-pattern>/Registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Comentario</servlet-name>
        <url-pattern>/Comentario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sesion</servlet-name>
        <url-pattern>/Sesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServicioObtenerChat</servlet-name>
        <url-pattern>/ServicioObtenerChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServicioUsuariosConectados</servlet-name>
        <url-pattern>/ServicioUsuariosConectados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServicioUsuarioDes</servlet-name>
        <url-pattern>/ServicioUsuarioDes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
